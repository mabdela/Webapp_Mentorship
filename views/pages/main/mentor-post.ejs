<!DOCTYPE html>
<html lang="en">

<!-- Head of the html file -->
<head>
    <% include ../../partials/title %>

    <!-- Importing the main-style headers -->
    <% include ../../partials/main-style %>
</head>

<!-- Body of the html file -->
<body>

    <div id="wrapper">

         <!-- Naivgation Bar: TOP -->
        <% include ../../partials/navigation-ui %>

        <br><br><br><br>

        <!-- INPUT FIELD NAME NOTES: (IN ORDER)
            mentor_academic (select options field)
            mentor_interests (select options field)
            mentor_field (input field)
            mentor_cv (file input upload)
            mentor_experience (textbox)
            mentor_voluntary (textbox)
            mentor_additionals (textbox)
        -->

        <div id ="content-con" class="container">
            <div class="row">

                <!-- Sidenav and page content-->

                    <% include ../../partials/sidenav-main %>

                <br>

                <!-- Main content of the page -->
                <div id="content" class="col-xs-13 col-md-9 mentor_form panel">


                        <!--<div class="container panel" style="width:100%; height: 100%;">-->

                            <h2 id="form-title" style="text-align: center;">Schedule a Meeting!</h2>
                            <h4 style="text-align: center; color: blue;">Haven't finished yet........</h4>

                            <form action="/mentorpost" method="post">

                                <div class="row">
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>
                                    <div class="col-bg-6 col-md-6 col-sm-10">
                                        <div id="interest-field">
                                            <span>Meeting Content</span>
                                            <br>
                                            <textarea name="meeting_content" cols="40" rows="2" placeholder="Discrible your meeting content in detial"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>
                                    <div class="col-bg-6 col-md-6 col-sm-10">
                                        <span>Meeting time</span><br>
                                        <textarea name="meeting_time" id="working-ex" cols="40" rows="1" placeholder="Menting time"></textarea>
                                    </div>
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>
                                </div>

                                <div class="row">
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>
                                    <div class="col-bg-6 col-md-6 col-sm-10">
                                        <span>Invite you mentees</span><br>
                                        <textarea name="mentees" id="voluntary-info" cols="40" rows="1" placeholder="Whom do you want to invite?"></textarea>
                                    </div>
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>
                                </div>

                                <div class="row">
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>
                                    <div class="col-bg-6 col-md-6 col-sm-10">
                                        <br>
                                        <center><button id="submit-button">Submit</button></center>
                                        <br>
                                    </div>
                                    <div class="col-bg-3 col-md-3 col-sm-1"></div>

                                </div>
                            </form>

                    <!--</div>--><!-- END OF CONTENT-->




                </div><!-- End of content div-->
            </div><!-- End of row div-->
        </div><!-- End of content-con div-->
    </div><!-- End of wrapper div-->

