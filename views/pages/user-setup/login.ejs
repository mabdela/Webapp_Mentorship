<!doctype html>
<html lang="en">
<head>
    <!-- Importing the main-style headers -->
    <% include ../../partials/login-header %>

</head>

<body>
    <!-- TOP NAVIGATION BAR-->
    <% include ../../partials/navigation %>

<div class="main">
    <div class="container tim-container" style="max-width:800px; width = 80%; padding-top:50px">
	  <div class="space-30"></div>
      <h1 class="text-center"> <br>Sign in</h1>
      <div class="space-30 "></div>

        <div class="content">
          <!-- show any messages that come back with authentication -->
          <% if (message.length > 0) { %>
              <div class="alert alert-danger"><%= message %></div>
          <% } %>


          <div class="col-lg-6">
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" required="true">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" required="true">
                </div>

                <center><button type="submit" class="btn btn-warning btn-lg"><span class="fa fa-sign-in "/> Login</button></center>
            </form>
          </div>


        <div class="col-lg-3 col-lg-offset-2 col-md-3 col-md-offset-4 col-sm-3 col-sm-offset-4 col-xs-4 col-xs-offset-0">
            <p>Login with</p>
            <a href="/auth/facebook" class="btn btn-block btn-facebook"><span class="fa fa-facebook"></span> Facebook</a>
        </div>

        <br><br>

        </div>


    </div>

    <br><br>
    <div class="col-lg-12 col-md-12 col-sm-12">
    <hr>
    <p class="text-center">Need an account? <a href="/signup">Signup</a></p>
    <p class="text-center">Or go <a href="/">home</a>.</p>
  </div>

<!-- end container -->
</div>
<!-- end main -->
</body>

  <script src="jquery/jquery-1.10.2.js" type="text/javascript"></script>
	<script src="assets/js/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
	<script src="bootstrap3/js/bootstrap.js" type="text/javascript"></script>
  <script src="assets/js/custom.js"></script>

</html>
